{
  "Kestrel": {
    "EndPoints": {
      "Http": {
        "Url": "http://*:8080"
      },
      "Https": {
        "Url": "https://*:8081"
      }
    }
  },
  "Auth0": {
    "Audience": "https://localhost:5226/",
    "Domain": "https://dev-dj6iiunlxv3pukjx.us.auth0.com/"
  },
  "ReverseProxy": {
    "Routes": {
      "VideoRoute": {
        "ClusterId": "videoCluster",
        "AuthorizationPolicy" : "authPolicy",
        "Match": {
          "Path": "/api/Video/{**catch-all}"
        }
      },
      "ActivityRoute": {
        "ClusterId": "activityCluster",
        "Match": {
          "Path": "/api/Activity/{**catch-all}"
        }
      }
    },
    "Clusters": {
      "videoCluster": {
        "Destinations": {
          "videoDestination": {
            "Address": "http://Vita_WebApi:5001"
          }
        }
      },
      "activityCluster": {
        "Destinations": {
          "activityDestination": {
            "Address": "http://Vita_WebApi:5001"
          }
        }
      }
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}
